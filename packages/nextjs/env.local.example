# Configuración de la aplicación "Rescatá un Árbol"
# Copia este archivo a .env.local y configura los valores

# Contrato NGODonations (después del deploy)
NEXT_PUBLIC_DONATIONS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Red Lisk Sepolia
NEXT_PUBLIC_LISK_SEPOLIA_RPC=https://rpc.sepolia-api.lisk.com
NEXT_PUBLIC_LISK_SEPOLIA_CHAIN_ID=4202
NEXT_PUBLIC_LISK_SEPOLIA_EXPLORER=https://sepolia-blockscout.lisk.com

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="Rescatá un Árbol"
NEXT_PUBLIC_APP_DESCRIPTION="Aplicación de conservación ambiental con blockchain"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Configuración de Filecoin (opcional)
NEXT_PUBLIC_FILECOIN_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_FILFOX_EXPLORER=https://filfox.info/en/ipfs/

# Configuración de Zama (opcional)
NEXT_PUBLIC_ZAMA_ENABLED=false
NEXT_PUBLIC_ZAMA_API_URL=

# Configuración de analytics (opcional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Configuración de notificaciones (opcional)
NEXT_PUBLIC_NOTIFICATION_ENABLED=true
NEXT_PUBLIC_TOAST_POSITION=top-right
